@model IEnumerable<MiluTienda.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.PrecioCadena) *@
            @* </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.PrecioCadena) *@
            @* </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>

            <td>
                    <div>
                        @{
                            var nombreImagen = "no-imagen.jpg";
                            if (item.Imagen != null)
                            {
                                nombreImagen = item.Imagen;
                            }
                        }
                        <img src="~/imagenes/productos/@nombreImagen" class="rounded-circle" height="50" width="50"
                             asp-append-version="true" />
                    </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="CambiarImagen" asp-route-id="@item.Id">Cambiar Imagen</a>
                    @* <a asp-action="CreateVariante" asp-route-productoId="@item.Id">Agregar Variante</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
