@{
    ViewData["Title"] = "Carrito de Compras";
}

<div class="container text-center mt-5 d-flex flex-column">
    <h1 class="text-pink">Tu carrito está vacío</h1>
    <p class="text-muted">Parece que aún no has agregado productos a tu carrito. ¡Explora nuestra tienda y encuentra algo que te guste!</p>

    <div class="my-4">
        <img src="~/imagenes/carritoVacio.png" alt="Carrito vacío" class="img-fluid" style="max-width: 300px;">
    </div>

    <a asp-action="Index" asp-controller="Escaparate" class="btn btn-pink btn-lg mt-5">
        <i class="bi bi-arrow-left"></i> Volver a la Tienda
    </a>
</div>

<style>
    .text-pink {
        color: #d63384;
    }

    .btn-pink {
        background-color: #d63384;
        color: white;
        border-radius: 10px;
        padding: 10px 20px;
        width: 30%;
        align-self: center;
    }

    .btn-pink:hover {
        background-color: #c2226c;
        color: white;
    }
</style>
