@model MiluTienda.Models.Producto

@{
    ViewData["Title"] = "Agregar al Carrito";
}

<h1 class="text-center mb-4">Agregar al Carrito</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body text-center">
                    <div>
                        @{
                            var nombreImagen = "no-imagen.jpg";
                            if (Model.Imagen != null)
                            {
                                nombreImagen = Model.Imagen;
                            }
                        }
                        <img src="~/imagenes/productos/@nombreImagen" class="img-fluid rounded" alt="Producto" style="max-height: 300px; width: auto;" />
                    </div>
                    <dl class="row mt-4">
                        <dt class="col-sm-4 font-weight-bold">Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 font-weight-bold">Descripción:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                        <dt class="col-sm-4 font-weight-bold">Precio:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PrecioCadena)</dd>

                        <dt class="col-sm-4 font-weight-bold">Stock:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>

                        <dt class="col-sm-4 font-weight-bold">Marca:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Marca)</dd>

                        <dt class="col-sm-4 font-weight-bold">Categoría:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Categoria.Descripcion)</dd>
                    </dl>
                    <!-- Formulario para confirmar la adición al carrito -->
                    <form asp-action="AgregarCarrito" method="post">
                        <input type="hidden" name="productoId" value="@Model.Id" />
                        <button type="submit" class="btn btn-success btn-lg btn-block">Añadir al Carrito</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-12 d-flex justify-content-center mt-3">
            <a asp-action="Index" class="btn btn-outline-primary btn-sm">Volver al Escaparate</a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            border: none;
        }

        .card-body {
            padding: 2rem;
        }

        .text-center {
            margin-bottom: 2rem;
        }

        .btn-lg {
            font-size: 1.2rem;
            padding: 0.8rem 2rem;
            width: 100%;
        }

        .btn-outline-primary {
            font-size: 1.1rem;
            padding: 0.8rem 1.5rem;
        }

            .btn-outline-primary:hover {
                background-color: #007bff;
                color: white;
            }
    </style>
}
