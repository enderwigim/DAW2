@model MiluTienda.Models.Clientes

@{
    ViewData["Title"] = "Crear Cliente";
}

<div class="container my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">Crear Nuevo Cliente</h1>
        <a asp-action="Index" class="btn btn-custom-inverse">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>

    <!-- Formulario de creación -->
    <div class="card shadow-sm border-pink">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label text-pink">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label text-pink">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label text-pink">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Direccion" class="form-label text-pink">Dirección</label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Poblacion" class="form-label text-pink">Población</label>
                        <input asp-for="Poblacion" class="form-control" />
                        <span asp-validation-for="Poblacion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CodPostal" class="form-label text-pink">Código Postal</label>
                        <input asp-for="CodPostal" class="form-control" />
                        <span asp-validation-for="CodPostal" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Nif" class="form-label text-pink">NIF</label>
                        <input asp-for="Nif" class="form-control" />
                        <span asp-validation-for="Nif" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="mt-4 d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-custom-inverse">
                        <i class="bi bi-check-circle"></i> Crear
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link href="~/css/generales.css" rel="stylesheet" asp-append-version="true" />
}