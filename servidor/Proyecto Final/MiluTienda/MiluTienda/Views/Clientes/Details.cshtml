@model MiluTienda.Models.Clientes

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">Detalles del Cliente</h1>
        <a asp-action="Index" class="btn btn-custom-inverse">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>

    <!-- Información del cliente -->
    <div class="card shadow-sm border-pink">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-pink">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 text-pink">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 text-pink">Teléfono:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3 text-pink">Dirección:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>

                <dt class="col-sm-3 text-pink">Población:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Poblacion)</dd>

                <dt class="col-sm-3 text-pink">Código Postal:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CodPostal)</dd>

                <dt class="col-sm-3 text-pink">NIF:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nif)</dd>
            </dl>
        </div>
    </div>

    <!-- Botón de regreso -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-custom-inverse">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>

@section Styles {
    <link href="~/css/generales.css" rel="stylesheet" asp-append-version="true" />
}
