@model IEnumerable<MiluTienda.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FamiliaProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atributo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreVariante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVariante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioCadena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FamiliaProducto.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Atributo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreVariante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVariante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCadena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
