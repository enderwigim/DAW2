@model MiluTienda.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">Editar Producto</h1>
    </div>

    <!-- Formulario de edición -->
    <div class="card shadow-sm border-pink">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label text-pink">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Descripcion" class="form-label text-pink">Descripción</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PrecioCadena" class="form-label text-pink">Precio</label>
                        <input asp-for="PrecioCadena" class="form-control" />
                        <span asp-validation-for="PrecioCadena" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Marca" class="form-label text-pink">Marca</label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CategoriaId" class="form-label text-pink">Categoría</label>
                        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Escaparate" />
                            <label class="form-check-label text-pink" asp-for="Escaparate">¿En escaparate?</label>
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="mt-4 d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-custom-inverse">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .text-pink {
        color: #D86A91;
    }

    .border-pink {
        border: 2px solid #D86A91;
    }

    .btn-custom-inverse {
        background-color: #FFCCD2;
        color: #000;
        border: 2px solid #D86A91;
        transition: all 0.3s ease-in-out;
    }

    .btn-custom-inverse:hover {
        background-color: #D86A91;
        color: #fff;
    }
</style>
