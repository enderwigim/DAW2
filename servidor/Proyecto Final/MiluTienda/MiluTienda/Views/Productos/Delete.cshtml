@model MiluTienda.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">Eliminar Producto</h1>
    </div>

    <!-- Mensaje de confirmación -->
    <div class="alert alert-danger text-center">
        <i class="bi bi-exclamation-triangle-fill"></i> ¿Estás seguro de que deseas eliminar este producto?
    </div>

    <!-- Información del producto -->
    <div class="card shadow-sm border-pink">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-pink">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 text-pink">Descripción:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3 text-pink">Precio:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PrecioCadena)</dd>

                <dt class="col-sm-3 text-pink">Marca:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

                <dt class="col-sm-3 text-pink">Escaparate:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Escaparate)</dd>

                <dt class="col-sm-3 text-pink">Categoría:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria.Descripcion)</dd>
            </dl>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="mt-4 d-flex justify-content-center gap-3">
        <form asp-action="Delete" class="m-0">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Cancelar
        </a>
    </div>
</div>

@section Styles {
    <link href="~/css/generales.css" rel="stylesheet" asp-append-version="true" />
}