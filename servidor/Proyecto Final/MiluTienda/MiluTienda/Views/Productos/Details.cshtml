@model MiluTienda.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">Detalles del Producto</h1>
        <a asp-action="Index" class="btn btn-custom-inverse">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>

    <!-- Información del producto -->
    <div class="card shadow-sm border-pink">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-pink">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 text-pink">Descripción:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3 text-pink">Precio:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PrecioCadena)</dd>

                <dt class="col-sm-3 text-pink">Marca:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

                <dt class="col-sm-3 text-pink">Escaparate:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Escaparate)</dd>

                <dt class="col-sm-3 text-pink">Categoría:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria.Descripcion)</dd>
            </dl>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="mt-4 d-flex justify-content-end gap-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-custom-inverse">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>

<style>
    .text-pink {
        color: #D86A91;
    }

    .border-pink {
        border: 2px solid #D86A91;
    }

    .btn-custom-inverse {
        background-color: #FFCCD2;
        color: #000;
        border: 2px solid #D86A91;
        transition: all 0.3s ease-in-out;
    }

        .btn-custom-inverse:hover {
            background-color: #D86A91;
            color: #fff;
        }
</style>
