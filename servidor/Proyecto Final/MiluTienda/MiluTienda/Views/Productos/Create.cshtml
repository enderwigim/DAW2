@model MiluTienda.Models.Producto

@{
    ViewData["Title"] = "Añadir Producto";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-pink text-white text-center">
            <h3><i class="bi bi-box-seam"></i> Añadir Nuevo Producto</h3>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <!-- Primera columna -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del producto" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese la descripción"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PrecioCadena" class="form-label fw-bold"></label>
                            <input asp-for="PrecioCadena" class="form-control" placeholder="Ej: 5.99" />
                            <span asp-validation-for="PrecioCadena" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Segunda columna -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Marca" class="form-label fw-bold"></label>
                            <input asp-for="Marca" class="form-control" placeholder="Ingrese la marca del producto" />
                            <span asp-validation-for="Marca" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="Escaparate" />
                            <label class="form-check-label fw-bold" asp-for="Escaparate"> ¿Mostrar en escaparate?</label>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CategoriaId" class="form-label fw-bold"></label>
                            <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId"></select>
                        </div>
                    </div>
                </div>

                <!-- Botón de envío -->
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-lg btn-custom-inverse text-white shadow">
                        <i class="bi bi-plus-circle"></i> Crear Producto
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Botón de volver -->
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

