@model MiluTienda.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-pink fw-bold">Create</h1>

<h4 class="mb-4 text-muted">Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="p-4 border rounded shadow-sm" style="background-color: #fff6f7; border: 2px solid #D86A91;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label text-pink"></label>
                <input asp-for="Descripcion" class="form-control border-pink" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-custom w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .text-pink {
        color: #D86A91;
    }

    .border-pink {
        border-color: #D86A91;
    }

    .form-control:focus {
        border-color: #D86A91;
        box-shadow: 0 0 5px #D86A91;
    }

    .btn-custom {
        background-color: #D86A91;
        color: #fff;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-custom:hover {
        background-color: #FFCCD2;
        color: #000;
    }
</style>