@model MiluTienda.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text-pink fw-bold">Detalles de la Categoría</h1>

<div class="border rounded p-4 shadow-sm" style="background-color: #fff6f7; border: 2px solid #D86A91;">
    <h4 class="mb-3">Información de la Categoría</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 text-pink">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>

<div class="mt-4 text-center">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-custom me-2">
        <i class="bi bi-pencil-square"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
</div>

<style>
    .text-pink {
        color: #D86A91;
    }

    .form-control:focus {
        border-color: #D86A91;
        box-shadow: 0 0 5px #D86A91;
    }

    .btn-custom {
        background-color: #D86A91;
        color: #fff;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-custom:hover {
        background-color: #FFCCD2;
        color: #000;
    }
</style>

