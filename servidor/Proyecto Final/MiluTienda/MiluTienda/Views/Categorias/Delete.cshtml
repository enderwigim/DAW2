@model MiluTienda.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-pink fw-bold">Eliminar Categoría</h1>

<h3 class="text-center text-danger mb-4">¿Estás seguro de que deseas eliminar esta categoría?</h3>
<div class="border rounded p-4 shadow-sm" style="background-color: #fff6f7; border: 2px solid #D86A91;">
    <h4 class="mb-3">Detalles de la Categoría</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 text-pink">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>

    <form asp-action="Delete" class="text-center mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash3"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </form>
</div>

<style>
    .text-pink {
        color: #D86A91;
    }

    .form-control:focus {
        border-color: #D86A91;
        box-shadow: 0 0 5px #D86A91;
    }

    .btn-danger {
        background-color: #ff6b6b;
        border: none;
    }

    .btn-danger:hover {
        background-color: #e03131;
    }
</style>
