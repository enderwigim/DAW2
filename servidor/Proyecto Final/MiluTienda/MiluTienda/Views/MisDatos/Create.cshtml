@model MiluTienda.Models.Clientes

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-container p-4 shadow-lg rounded bg-white" style="max-width: 500px; width: 100%;">
        <h3 class="text-center text-dark-normal mb-4 fw-bold">Completa tus datos para empezar</h3>
        <hr class="mb-4" />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <!-- Nombre -->
            <div class="form-floating mb-3">
                <input asp-for="Nombre" class="form-control border-0 shadow-sm" placeholder="Nombre" />
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Teléfono -->
            <div class="form-floating mb-3">
                <input asp-for="Telefono" class="form-control border-0 shadow-sm" placeholder="Teléfono" />
                <label asp-for="Telefono" class="control-label">Teléfono</label>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <!-- Dirección -->
            <div class="form-floating mb-3">
                <input asp-for="Direccion" class="form-control border-0 shadow-sm" placeholder="Dirección" />
                <label asp-for="Direccion" class="control-label">Dirección</label>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <!-- Población -->
            <div class="form-floating mb-3">
                <input asp-for="Poblacion" class="form-control border-0 shadow-sm" placeholder="Población" />
                <label asp-for="Poblacion" class="control-label">Población</label>
                <span asp-validation-for="Poblacion" class="text-danger"></span>
            </div>

            <!-- Código Postal -->
            <div class="form-floating mb-3">
                <input asp-for="CodPostal" class="form-control border-0 shadow-sm" placeholder="Código Postal" />
                <label asp-for="CodPostal" class="control-label">Código Postal</label>
                <span asp-validation-for="CodPostal" class="text-danger"></span>
            </div>

            <!-- NIF -->
            <div class="form-floating mb-3">
                <input asp-for="Nif" class="form-control border-0 shadow-sm" placeholder="NIF" />
                <label asp-for="Nif" class="control-label">NIF</label>
                <span asp-validation-for="Nif" class="text-danger"></span>
            </div>

            <!-- Botón de Enviar -->
            <div class="text-center mt-4">
                <input type="submit" value="Crear Cuenta" class="btn btn-custom btn-lg w-100 fw-bold" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

