@model MiluTienda.Models.Estado

@{
    ViewData["Title"] = "Eliminar Estado";
}

<div class="container my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">Eliminar Estado</h1>
        <a asp-action="Index" class="btn btn-custom-inverse">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>

    <div class="alert alert-danger text-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> ¿Estás seguro de que deseas eliminar este estado?
    </div>

    <!-- Detalle del estado -->
    <div class="card shadow-sm border-pink">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-pink">Descripción:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
            </dl>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="mt-4 d-flex justify-content-center gap-3">
        <form asp-action="Delete" class="m-0">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Cancelar
        </a>
    </div>
</div>

@section Styles {
        <link href="~/css/generales.css" rel="stylesheet" asp-append-version="true" />
}

