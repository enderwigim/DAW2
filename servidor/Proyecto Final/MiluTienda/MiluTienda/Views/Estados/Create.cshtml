@model MiluTienda.Models.Estado

@{
    ViewData["Title"] = "Crear Estado";
}

<div class="container my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">Crear Nuevo Estado</h1>
        <a asp-action="Index" class="btn btn-custom-inverse">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>

    <!-- Formulario de creación -->
    <div class="card shadow-sm border-pink">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label text-pink">Descripción</label>
                    <input asp-for="Descripcion" class="form-control border-pink" />
                    <span asp-validation-for="Descripcion"></span>
                </div>

                <!-- Botones de acción -->
                <div class="d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-custom-inverse">
                        <i class="bi bi-plus-circle"></i> Crear
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .text-pink {
        color: #D86A91;
    }

    .border-pink {
        border: 2px solid #D86A91;
    }

    .btn-custom-inverse {
        background-color: #FFCCD2;
        color: #000;
        border: 2px solid #D86A91;
        transition: all 0.3s ease-in-out;
    }

    .btn-custom-inverse:hover {
        background-color: #D86A91;
        color: #fff;
    }
</style>
