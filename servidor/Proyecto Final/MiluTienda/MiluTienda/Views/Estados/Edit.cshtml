@model MiluTienda.Models.Estado

@{
    ViewData["Title"] = "Editar Estado";
}

<div class="container my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">Editar Estado</h1>
    </div>

    <!-- Formulario de edición -->
    <div class="card shadow-sm border-pink">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label text-pink">Descripción</label>
                    <input asp-for="Descripcion" class="form-control border-pink" />
                    <span asp-validation-for="Descripcion"></span>
                </div>

                <!-- Botones de acción -->
                <div class="d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-custom-inverse">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link href="~/css/generales.css" rel="stylesheet" asp-append-version="true" />
}
