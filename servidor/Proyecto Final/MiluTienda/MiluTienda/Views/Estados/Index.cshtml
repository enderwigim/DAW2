@model IEnumerable<MiluTienda.Models.Estado>

@{
    ViewData["Title"] = "Estados";
}

<div class="container my-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-pink">Estados</h1>
        <a asp-action="Create" class="btn btn-custom-inverse">
            <i class="bi bi-plus-circle"></i> Crear nuevo estado
        </a>
    </div>

    <!-- Tabla de estados -->
    <table class="table table-hover table-bordered text-center shadow-sm">
        <thead class="table-pink">
            <tr>
                <th class="text-dark">@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th class="text-dark">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td class="align-middle">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mx-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mx-1">
                            <i class="bi bi-trash3"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .text-pink {
        color: #D86A91;
    }

    .table-pink {
        background-color: #FFCCD2;
    }

    .btn-custom-inverse {
        background-color: #FFCCD2;
        color: #000;
        border: 2px solid #D86A91;
        transition: all 0.3s ease-in-out;
    }

    .btn-custom-inverse:hover {
        background-color: #D86A91;
        color: #fff;
    }
</style>
