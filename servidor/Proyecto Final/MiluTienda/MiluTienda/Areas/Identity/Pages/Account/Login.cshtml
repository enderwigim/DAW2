@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="page-container">
    <div class="login-container p-4 shadow-lg rounded">
        <h1 class="text-center text-dark-normal mb-4">Iniciar Sesión</h1>

        <section>
            <form id="account" method="post">
                <h2 class="text-center text-dark-normal mb-3">Bienvenido</h2>
                <hr class="mb-4" />

                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-custom">Iniciar Sesión</button>
                </div>

                <div class="text-center mt-3">
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-dark">Registrarse como un nuevo usuario</a></p>
                </div>
            </form>
        </section>
    </div>
</div>




@section Styles {
    <link href="~/css/login.css" rel="stylesheet" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
